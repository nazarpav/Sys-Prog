<Window x:Class="_18_03_2020.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_18_03_2020"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="80*"/>
        </Grid.ColumnDefinitions>
        <TreeView Grid.Column="0" Background="#FFFFAE00" Name="TW" FontFamily="Arial Black"/>
        <GridSplitter Grid.Column="1" Width="3"/>
        <ListView Grid.Column="2" Background="#FF292929" Foreground="#FFDEDEDE"/>
    </Grid>
</Window>
